---

<Layout title={`Hung Software / ${currentYear}`}>
  <div class="bg-zinc-50 min-h-screen text-zinc-900 font-sans selection:bg-blue-600 selection:text-white pb-12 relative overflow-hidden">
    
    <!-- Background Grid Layers -->
    <div class="fixed inset-0 bg-grid-pattern opacity-[0.6] pointer-events-none z-0"></div>
    <div class="fixed inset-0 opacity-[0.05] pointer-events-none z-0" style="background-image: linear-gradient(#18181b 1px, transparent 1px), linear-gradient(90deg, #18181b 1px, transparent 1px); background-size: 100px 100px;"></div>

    <!-- Navigation -->
    <nav class="fixed top-0 w-full z-50 bg-zinc-50/90 backdrop-blur-sm border-b border-zinc-200">
      <div class="max-w-[1400px] mx-auto px-6 h-16 flex items-center justify-between">
        <div class="font-mono text-[10px] tracking-[0.3em] font-bold uppercase">PORTFOLIO_SYSTEM_V.{currentYear}</div>
        <div class="flex items-center gap-6">
           <div class="hidden sm:flex items-center gap-2 font-mono text-[10px] text-zinc-400">
              <span class="w-1.5 h-1.5 bg-blue-500 rounded-full animate-pulse"></span>
              CPU_LOAD: 12%
           </div>
           <div class="font-mono text-[10px] tracking-[0.2em] text-zinc-500 font-bold uppercase" data-t="NAV_ROLE">SENIOR ENGINEER</div>
           
           <!-- Language Switcher -->
           <div class="flex items-center gap-3 ml-6 pl-6 border-l border-zinc-200">
              {['VI', 'EN', 'JA'].map(l => (
                <button class="lang-btn font-mono text-[10px] text-zinc-400 hover:text-blue-600 cursor-pointer transition-colors font-bold" data-lang={l.toLowerCase()}>
                  [{l}]
                </button>
              ))}
           </div>
        </div>
      </div>
    </nav>

    <!-- Side Ruler -->
    <div class="fixed left-0 top-0 h-full w-12 border-r border-zinc-200 z-40 hidden xl:flex flex-col items-center py-20 pointer-events-none opacity-40">
       {Array.from({length: 10}).map((_, i) => (
          <div class="font-mono text-[10px] mb-20 transform -rotate-90 origin-center text-zinc-400">
             0{i}_COORD
          </div>
       ))}
    </div>

    <main class="relative z-10 pt-32 max-w-[1400px] mx-auto px-6 xl:pl-20">
      
      <!-- Hero Section -->
      <section class="min-h-[80vh] flex flex-col justify-center mb-24 relative">
        <!-- Technical Annotation -->
        <div class="absolute top-0 right-0 p-6 hidden lg:block">
           <div class="bg-white border border-zinc-200 p-6 shadow-sm font-mono text-[10px] space-y-2 w-64">
              <div class="text-blue-600 font-bold border-b border-zinc-100 pb-2 mb-2 uppercase tracking-widest" data-t="HERO_MANIFEST">System_Manifest</div>
              <div class="flex justify-between"><span>TYPE:</span> <span>FULL_STACK</span></div>
              <div class="flex justify-between"><span>EXP:</span> <span>11_YEARS</span></div>
              <div class="flex justify-between"><span>LOC:</span> <span>VN_SEA_GLOBAL</span></div>
              <div class="flex justify-between"><span>ARCH:</span> <span>DISTRIBUTED</span></div>
           </div>
        </div>

        <div class="flex items-center gap-3 mb-12 group">
          <span class="relative flex h-3 w-3">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-500 opacity-75"></span>
            <span class="relative inline-flex rounded-full h-3 w-3 bg-green-600"></span>
          </span>
          <span class="font-mono text-[10px] tracking-[0.3em] text-zinc-500 uppercase font-black group-hover:text-zinc-900 transition-colors" data-t="NAV_STATUS">Available_For_New_Prototypes</span>
