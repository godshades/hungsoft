<script define:vars={{ translations }}>
  const buttons = document.querySelectorAll('.lang-btn');
  const translatableElements = document.querySelectorAll('[data-t]');
  
  function updateLanguage(lang) {
    // Update active state of buttons
    buttons.forEach(btn => {
      if (btn.dataset.lang === lang) {
        btn.classList.add('text-blue-600');
        btn.classList.remove('text-zinc-400');
      } else {
        btn.classList.remove('text-blue-600');
        btn.classList.add('text-zinc-400');
      }
    });

    // Update text content
    translatableElements.forEach(el => {
      const key = el.dataset.t;
      if (translations[lang] && translations[lang][key]) {
        // Use innerHTML for description since it has <br/> tags
        if (key === 'HERO_DESC' || key === 'LETS_BUILD') {
           el.innerHTML = translations[lang][key];
        } else {
           el.innerText = translations[lang][key];
        }
      }
    });

    localStorage.setItem('pref-lang', lang);
  }

  buttons.forEach(btn => {
    btn.addEventListener('click', () => {
      updateLanguage(btn.dataset.lang);
    });
  });

  // Init
  const savedLang = localStorage.getItem('pref-lang') || 'vi';
  updateLanguage(savedLang);
</script>
