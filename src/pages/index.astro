        <div class="max-w-[1400px] mx-auto px-6 grid grid-cols-1 md:grid-cols-2 gap-12 md:gap-24 relative z-10">
           
           <!-- Left Column: Status -->
           <div class="space-y-8">
              <div class="font-mono text-[10px] text-zinc-400 uppercase tracking-[0.4em] font-bold">
                 <span data-t="FOOTER_ENGINEERED">Engineered_With_Precision // VN_</span>{currentYear}
              </div>
              <div class="flex gap-12 font-mono text-[10px] text-zinc-400 uppercase tracking-[0.4em] font-bold">
                 <a href="#" class="hover:text-blue-600 transition-colors cursor-pointer underline underline-offset-4" data-t="STATUS_REPORT">STATUS_REPORT</a>
                 <span>©_{currentYear}_ARCHIVE</span>
              </div>
           </div>

           <!-- Right Column: Contact Matrix -->
           <div class="space-y-8">
              <div class="font-mono text-[10px] text-blue-600 uppercase tracking-[0.4em] font-black border-b border-zinc-200 pb-4 mb-8" data-t="CONTACT_MATRIX">
                 CONTACT_MATRIX
