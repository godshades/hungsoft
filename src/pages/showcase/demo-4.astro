---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="ALEX | Creative Engineer">
  <!-- Styles for this demo -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Space+Mono:wght@400;700&display=swap" rel="stylesheet">

  <div class="bg-[#0F172A] min-h-screen text-[#F8FAFC] font-['Space_Mono',_monospace] selection:bg-[#22C55E] selection:text-[#0F172A]">
    
    <!-- Navigation -->
    <nav class="fixed w-full z-50 mix-blend-difference px-6 py-8 flex justify-between items-center">
      <a href="#" class="text-2xl font-bold tracking-tighter hover:bg-[#22C55E] hover:text-[#0F172A] transition-all px-2 cursor-pointer">ALEX.SYS</a>
      <div class="hidden md:flex items-center gap-12 text-xs font-bold uppercase tracking-[0.3em]">
        <a href="#work" class="hover:text-[#22C55E] transition-colors cursor-pointer">[ 01_WORK ]</a>
        <a href="#about" class="hover:text-[#22C55E] transition-colors cursor-pointer">[ 02_ABOUT ]</a>
        <a href="#contact" class="hover:text-[#22C55E] transition-colors cursor-pointer">[ 03_CONTACT ]</a>
      </div>
      <div class="flex items-center gap-4">
         <div class="w-2 h-2 rounded-full bg-[#22C55E] animate-pulse"></div>
         <span class="text-[10px] font-bold tracking-widest opacity-50">STATUS: ACTIVE</span>
      </div>
    </nav>

    <main>
      <!-- Hero Section -->
      <section class="min-h-screen flex items-center justify-center relative overflow-hidden px-6 border-b border-white/5">
        <!-- Technical Background Grid -->
        <div class="absolute inset-0 opacity-[0.03] pointer-events-none" style="background-image: radial-gradient(#F8FAFC 1px, transparent 1px); background-size: 40px 40px;"></div>
        
        <div class="max-w-7xl mx-auto w-full relative z-10 py-32">
          <div class="inline-block bg-[#22C55E] text-[#0F172A] px-3 py-1 text-[10px] font-bold tracking-[0.4em] mb-12 uppercase">
             Build_Mode: Production
          </div>
          <h1 class="text-[12vw] md:text-[10vw] leading-[0.8] font-bold tracking-tighter mb-16 uppercase">
            CREATIVE<br />
            <span class="text-transparent border-t-2 border-b-2 border-white/10 hover:text-white transition-colors duration-500 cursor-default block py-4">ENGINEER</span>
          </h1>
          <div class="grid md:grid-cols-2 gap-16 items-end">
             <p class="text-lg md:text-xl text-slate-400 leading-relaxed font-medium">
                I ARCHITECT DIGITAL EXPERIENCES AT THE INTERSECTION OF CODE AND ART. MINIMALIST BY NATURE, BRUTALIST BY CHOICE. BASED IN TOKYO.
             </p>
             <div class="flex flex-wrap gap-4 justify-start md:justify-end">
                <a href="#work" class="bg-white text-[#0F172A] px-10 py-5 text-sm font-bold uppercase tracking-widest hover:bg-[#22C55E] transition-all cursor-pointer">View_Projects</a>
                <a href="#contact" class="border border-white/20 text-white px-10 py-5 text-sm font-bold uppercase tracking-widest hover:bg-white hover:text-[#0F172A] transition-all cursor-pointer">Get_In_Touch</a>
             </div>
          </div>
        </div>
      </section>

      <!-- Project Grid -->
      <section id="work" class="py-32 px-6">
        <div class="max-w-7xl mx-auto space-y-32">
           <div class="flex items-baseline gap-8 border-b border-white/10 pb-8">
              <h2 class="text-4xl md:text-6xl font-bold tracking-tighter uppercase">Selected_Work</h2>
              <span class="text-xs font-bold text-slate-500 tracking-[0.5em]">(V1.0.4)</span>
           </div>

           <div class="grid grid-cols-1 md:grid-cols-2 gap-y-32 gap-x-16">
              
              <!-- Project 1 (Featured) -->
              <div class="group md:col-span-2 cursor-pointer">
                 <div class="aspect-[21/9] bg-slate-800 relative overflow-hidden mb-10 border border-white/10 group-hover:border-[#22C55E]/50 transition-colors duration-500">
                    <!-- CSS Pattern Art -->
                    <div class="absolute inset-0 opacity-40 group-hover:opacity-100 transition-opacity duration-700" style="background-image: repeating-linear-gradient(45deg, transparent, transparent 20px, #22C55E 20px, #22C55E 21px); background-size: 100% 100%;"></div>
                    <div class="absolute inset-0 flex items-center justify-center">
                       <div class="bg-[#0F172A] px-12 py-6 border border-white/20 shadow-2xl transform group-hover:scale-110 transition-transform duration-700">
                          <span class="text-4xl font-bold tracking-[0.2em] group-hover:text-[#22C55E]">LUNAR.OS</span>
                       </div>
                    </div>
                 </div>
                 <div class="flex justify-between items-start">
                    <div class="space-y-4">
                       <h3 class="text-3xl font-bold uppercase group-hover:text-[#22C55E] transition-colors tracking-tighter">Lunar Design System</h3>
                       <p class="text-slate-500 text-sm max-w-lg leading-relaxed">FULL RECONSTRUCTION OF COMPONENT ARCHITECTURE FOR SCALE. 100+ ATOMIC ELEMENTS.</p>
                    </div>
                    <div class="text-[10px] font-bold text-[#22C55E] border border-[#22C55E]/30 px-3 py-1">2026_NEW</div>
                 </div>
              </div>

              <!-- Project 2 -->
              <div class="group cursor-pointer space-y-10">
                 <div class="aspect-square bg-slate-900 relative overflow-hidden border border-white/10 group-hover:border-white/30 transition-all duration-500">
                    <div class="absolute inset-0 opacity-20 group-hover:opacity-40 transition-opacity" style="background-image: radial-gradient(circle, #F8FAFC 2px, transparent 2px); background-size: 30px 30px;"></div>
                    <div class="absolute inset-0 flex items-center justify-center">
                       <div class="w-32 h-32 border-4 border-dashed border-white/10 rounded-full animate-spin-slow group-hover:border-[#22C55E]/40"></div>
                    </div>
                 </div>
                 <div class="space-y-4">
                    <div class="text-xs font-bold text-slate-500 uppercase tracking-widest">[ INTERFACE_DESIGN ]</div>
                    <h3 class="text-2xl font-bold uppercase group-hover:text-[#22C55E] transition-colors">Vortex UI Kit</h3>
                 </div>
              </div>

              <!-- Project 3 (Offset) -->
              <div class="group cursor-pointer space-y-10 md:mt-32">
                 <div class="aspect-square bg-slate-900 relative overflow-hidden border border-white/10 group-hover:border-white/30 transition-all duration-500">
                    <div class="absolute inset-0 opacity-20 group-hover:opacity-40 transition-opacity" style="background: linear-gradient(90deg, #F8FAFC05 1px, transparent 1px), linear-gradient(#F8FAFC05 1px, transparent 1px); background-size: 20px 20px;"></div>
                    <div class="absolute inset-0 flex items-center justify-center">
                        <div class="grid grid-cols-3 gap-2">
                           <div class="w-8 h-8 bg-white/5 group-hover:bg-[#22C55E]/20 transition-colors"></div>
                           <div class="w-8 h-8 bg-white/5 group-hover:bg-[#22C55E]/40 transition-colors"></div>
                           <div class="w-8 h-8 bg-white/5 group-hover:bg-[#22C55E]/20 transition-colors"></div>
                        </div>
                    </div>
                 </div>
                 <div class="space-y-4">
                    <div class="text-xs font-bold text-slate-500 uppercase tracking-widest">[ DATA_VISUALIZATION ]</div>
                    <h3 class="text-2xl font-bold uppercase group-hover:text-[#22C55E] transition-colors">Prism Analytics</h3>
                 </div>
              </div>

           </div>
        </div>
      </section>

      <!-- Marquee Section -->
      <section class="py-24 border-y border-white/5 overflow-hidden">
         <div class="flex whitespace-nowrap animate-marquee">
            <span class="text-7xl md:text-9xl font-bold uppercase tracking-tighter opacity-10 mx-10">Javascript</span>
            <span class="text-7xl md:text-9xl font-bold uppercase tracking-tighter text-[#22C55E] mx-10">Typescript</span>
            <span class="text-7xl md:text-9xl font-bold uppercase tracking-tighter opacity-10 mx-10">React</span>
            <span class="text-7xl md:text-9xl font-bold uppercase tracking-tighter opacity-10 mx-10">Astro</span>
            <span class="text-7xl md:text-9xl font-bold uppercase tracking-tighter text-[#22C55E] mx-10">Next.js</span>
         </div>
      </section>

      <!-- Contact Section -->
      <section id="contact" class="py-32 px-6">
        <div class="max-w-7xl mx-auto grid lg:grid-cols-2 gap-20">
           <div class="space-y-12">
              <h2 class="text-5xl md:text-7xl font-bold tracking-tighter uppercase leading-none">Start_A_<br/>Project.</h2>
              <p class="text-slate-400 text-xl leading-relaxed max-w-md uppercase italic">Available for remote collaboration worldwide. Currently accepting new clients for Q3 2026.</p>
           </div>
           <div class="bg-white/5 border border-white/10 p-12 md:p-20 space-y-12">
              <div class="space-y-8">
                 <div class="text-xs font-bold text-slate-500 uppercase tracking-widest border-b border-white/10 pb-4">Contact_Information</div>
                 <div class="space-y-4">
                    <a href="mailto:alex@sys.dev" class="text-2xl md:text-4xl font-bold hover:text-[#22C55E] transition-colors block">ALEX@SYS.DEV</a>
                    <a href="https://zalo.me/0383338728" target="_blank" class="text-2xl md:text-4xl font-bold hover:text-[#22C55E] transition-colors block">ZALO: +84 383338728</a>
                 </div>
              </div>
              <div class="space-y-8">
                 <div class="text-xs font-bold text-slate-500 uppercase tracking-widest border-b border-white/10 pb-4">Social_Archives</div>
                 <div class="flex gap-8 text-sm font-bold uppercase tracking-widest">
                    <a href="#" class="hover:text-[#22C55E] transition-colors cursor-pointer">GH</a>
                    <a href="#" class="hover:text-[#22C55E] transition-colors cursor-pointer">LI</a>
                    <a href="#" class="hover:text-[#22C55E] transition-colors cursor-pointer">TW</a>
                 </div>
              </div>
           </div>
        </div>
      </section>

    </main>

    <footer class="py-12 px-6 border-t border-white/5">
      <div class="max-w-7xl mx-auto flex flex-col md:flex-row justify-between items-center gap-8 opacity-30 text-[10px] font-bold uppercase tracking-[0.4em]">
         <div>© 2026 ALEX_SYS_ENGINEERING_LABS</div>
         <div class="flex gap-8">
            <span>TOKYO, JP</span>
            <span>35.6762° N, 139.6503° E</span>
         </div>
      </div>
    </footer>
  </div>
</Layout>

<style>
  @keyframes marquee {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }
  .animate-marquee {
    animation: marquee 20s linear infinite;
  }
  .animate-spin-slow {
    animation: spin 12s linear infinite;
  }
  @keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }
</style>
