---
import Layout from '../../layouts/Layout.astro';
title: "Apex Financial | Precision Investment Intelligence"
---

<Layout title="Apex Financial | Precision Investment Intelligence">
  <!-- Styles for this demo -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:wght@300;400;500;600;700&display=swap" rel="stylesheet">

  <div class="bg-[#F8FAFC] min-h-screen text-[#020617] font-['IBM_Plex_Sans',_sans-serif]">
    
    <!-- Top Bar -->
    <div class="bg-[#0F172A] text-white py-2 px-6 overflow-hidden">
       <div class="max-w-7xl mx-auto flex items-center gap-12 whitespace-nowrap animate-marquee-fast">
          <span class="text-[10px] font-bold tracking-widest"><span class="text-emerald-400">▲</span> NASDAQ: 18,245.42 (+1.2%)</span>
          <span class="text-[10px] font-bold tracking-widest"><span class="text-emerald-400">▲</span> S&P 500: 5,137.08 (+0.8%)</span>
          <span class="text-[10px] font-bold tracking-widest"><span class="text-rose-400">▼</span> BTC: $64,231.50 (-0.4%)</span>
          <span class="text-[10px] font-bold tracking-widest"><span class="text-emerald-400">▲</span> GOLD: $2,342.10 (+0.5%)</span>
          <!-- Duplicate for seamless loop -->
          <span class="text-[10px] font-bold tracking-widest"><span class="text-emerald-400">▲</span> NASDAQ: 18,245.42 (+1.2%)</span>
          <span class="text-[10px] font-bold tracking-widest"><span class="text-emerald-400">▲</span> S&P 500: 5,137.08 (+0.8%)</span>
       </div>
    </div>

    <!-- Header -->
    <header class="bg-white/90 backdrop-blur-xl sticky top-0 z-50 border-b border-slate-100 h-24 flex items-center">
      <div class="max-w-7xl mx-auto px-6 w-full flex items-center justify-between">
        <div class="flex items-center gap-16">
          <a href="#" class="flex items-center gap-3 group cursor-pointer">
            <div class="w-10 h-10 bg-[#CA8A04] flex items-center justify-center text-white shadow-xl shadow-amber-200 group-hover:scale-105 transition-transform">
               <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path></svg>
            </div>
            <span class="text-2xl font-bold tracking-tight text-[#0F172A] uppercase">Apex.Fin</span>
          </a>
          <nav class="hidden lg:flex items-center gap-10 text-[11px] font-black uppercase tracking-[0.2em] text-slate-500">
            <a href="#" class="hover:text-[#CA8A04] transition-colors cursor-pointer">Intelligence</a>
            <a href="#" class="hover:text-[#CA8A04] transition-colors cursor-pointer">Advisory</a>
            <a href="#" class="hover:text-[#CA8A04] transition-colors cursor-pointer">Private Wealth</a>
            <a href="#" class="hover:text-[#CA8A04] transition-colors cursor-pointer">Reports</a>
          </nav>
        </div>
        <div class="flex items-center gap-4">
           <a href="#" class="bg-[#0F172A] hover:bg-[#1E3A8A] text-white px-8 py-3 font-bold text-xs uppercase tracking-widest transition-all cursor-pointer shadow-2xl shadow-slate-900/10">Investor Login</a>
        </div>
      </div>
    </header>

    <main>
      <!-- Hero Section -->
      <section class="relative py-24 md:py-32 overflow-hidden border-b border-slate-100">
        <div class="max-w-7xl mx-auto px-6 grid lg:grid-cols-2 gap-24 items-center relative z-10">
          <div class="space-y-12">
             <div class="inline-block border-l-4 border-[#CA8A04] pl-6 py-2">
                <span class="text-xs font-black uppercase tracking-[0.3em] text-[#CA8A04]">Institutional Grade Data</span>
             </div>
             <h1 class="text-5xl md:text-7xl font-light leading-[1.05] tracking-tight text-[#020617]">
                Master your <br/> <span class="font-bold">financial destiny</span> with precision.
             </h1>
             <p class="text-xl text-slate-500 max-w-xl leading-relaxed">
                Harness AI-driven predictive modeling and institutional-grade analytics to navigate the global markets. Real-time intelligence for the modern investor.
             </p>
             <div class="flex flex-col sm:flex-row gap-6">
                <a href="#" class="bg-[#CA8A04] hover:bg-[#A16207] text-white px-10 py-5 font-bold uppercase tracking-widest shadow-2xl shadow-amber-900/10 transition-all hover:scale-105 text-center cursor-pointer">Open Account</a>
                <a href="#" class="bg-white border-2 border-slate-100 hover:border-amber-200 text-[#0F172A] px-10 py-5 font-bold uppercase tracking-widest transition-all text-center cursor-pointer">Portfolio Analysis</a>
             </div>
          </div>

          <!-- CSS Financial Dashboard Visual -->
          <div class="relative group">
             <div class="absolute -inset-10 bg-blue-500/5 rounded-full blur-[100px]"></div>
             <div class="relative bg-white border border-slate-100 shadow-[0_32px_64px_-16px_rgba(0,0,0,0.1)] p-8 md:p-12 overflow-hidden">
                <div class="flex justify-between items-end mb-16">
                   <div class="space-y-2">
                      <span class="text-[10px] font-black uppercase tracking-widest text-slate-400">Total Asset Value</span>
                      <div class="text-4xl font-bold tracking-tighter text-[#0F172A]">$1,245,890.00</div>
                   </div>
                   <div class="text-right">
                      <span class="text-xs font-bold text-emerald-500 bg-emerald-50 px-3 py-1">+14.2% (YTD)</span>
                   </div>
                </div>

                <!-- CSS Bar Chart -->
                <div class="flex items-end gap-3 h-48 mb-12">
                   <div class="flex-1 bg-slate-50 border-t border-slate-100 h-[30%]"></div>
                   <div class="flex-1 bg-slate-100 border-t border-slate-200 h-[45%]"></div>
                   <div class="flex-1 bg-slate-50 border-t border-slate-100 h-[25%]"></div>
                   <div class="flex-1 bg-slate-100 border-t border-slate-200 h-[60%]"></div>
                   <div class="flex-1 bg-slate-200 border-t border-slate-300 h-[80%]"></div>
                   <div class="flex-1 bg-[#CA8A04] h-[100%]"></div>
                   <div class="flex-1 bg-slate-50 border-t border-slate-100 h-[40%]"></div>
                   <div class="flex-1 bg-slate-100 border-t border-slate-200 h-[55%]"></div>
                </div>

                <div class="grid grid-cols-2 gap-8 pt-8 border-t border-slate-100">
                   <div>
                      <div class="text-[10px] font-black uppercase tracking-widest text-slate-400 mb-2">Alpha Signal</div>
                      <div class="h-2 bg-slate-100 rounded-full w-full overflow-hidden">
                         <div class="bg-[#CA8A04] h-full w-[78%]"></div>
                      </div>
                   </div>
                   <div>
                      <div class="text-[10px] font-black uppercase tracking-widest text-slate-400 mb-2">Risk Exposure</div>
                      <div class="h-2 bg-slate-100 rounded-full w-full overflow-hidden">
                         <div class="bg-blue-600 h-full w-[24%]"></div>
                      </div>
                   </div>
                </div>
             </div>
          </div>
        </div>
      </section>

      <!-- Solutions Grid -->
      <section class="py-32 px-6 bg-white">
        <div class="max-w-7xl mx-auto">
          <div class="grid lg:grid-cols-3 gap-16">
            <div class="lg:col-span-1 space-y-8">
               <h2 class="text-xs font-black uppercase tracking-[0.4em] text-[#CA8A04]">Solutions</h2>
               <h3 class="text-4xl font-bold text-[#0F172A] leading-tight">Tailored strategy for every objective.</h3>
               <p class="text-slate-500 leading-relaxed">Our multidisciplinary approach combines quantitative analysis with qualitative expertise to deliver consistent results.</p>
               <a href="#" class="inline-flex items-center gap-4 text-sm font-black uppercase tracking-widest group cursor-pointer">
                  View Strategy <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
               </a>
            </div>

            <div class="lg:col-span-2 grid sm:grid-cols-2 gap-8">
               {[
                 { title: 'Asset Allocation', icon: 'M11 3.055A9.001 9.001 0 1020.945 13H11V3.055z M20.488 9H15V3.512A9.025 9.025 0 0120.488 9z' },
                 { title: 'Risk Management', icon: 'M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z' },
                 { title: 'Tax Optimization', icon: 'M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z' },
                 { title: 'Estate Planning', icon: 'M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6' },
               ].map((s) => (
                 <div class="group border border-slate-100 p-10 hover:border-amber-200 transition-all duration-500 cursor-pointer">
                    <div class="w-12 h-12 bg-slate-50 text-[#0F172A] flex items-center justify-center mb-8 group-hover:bg-[#CA8A04] group-hover:text-white transition-colors">
                       <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={s.icon}></path></svg>
                    </div>
                    <h4 class="text-xl font-bold mb-4">{s.title}</h4>
                    <p class="text-slate-500 text-sm leading-relaxed">Systematic methodology designed to preserve capital while capturing market alpha.</p>
                 </div>
               ))}
            </div>
          </div>
        </div>
      </section>

      <!-- Massive CTA -->
      <section class="py-32 px-6 text-center bg-[#0F172A] text-white relative overflow-hidden">
        <div class="absolute inset-0 bg-[url('https://www.transparenttextures.com/patterns/black-paper.png')] opacity-20"></div>
        <div class="max-w-4xl mx-auto space-y-12 relative z-10">
           <h2 class="text-5xl md:text-8xl font-bold tracking-tighter leading-none uppercase">The future <br/> of wealth.</h2>
           <p class="text-slate-400 text-xl max-w-xl mx-auto font-medium">Schedule a confidential consultation with our private advisory team today.</p>
           <a href="#" class="inline-block bg-[#CA8A04] hover:bg-[#A16207] text-white px-12 py-6 font-bold uppercase tracking-widest shadow-2xl transition-all hover:scale-105 cursor-pointer">Request Invitation</a>
        </div>
      </section>

    </main>

    <footer class="bg-white py-24 px-6 border-t border-slate-100 font-medium text-xs text-slate-400 uppercase tracking-widest">
      <div class="max-w-7xl mx-auto flex flex-col md:flex-row justify-between items-center gap-12 text-center md:text-left">
         <div class="space-y-4">
            <div class="text-[#0F172A] font-bold text-xl uppercase tracking-tighter">Apex.Fin</div>
            <div>© 2026 Apex Financial Group. All rights reserved.</div>
         </div>
         <div class="flex gap-12">
            <a href="#" class="hover:text-[#CA8A04] transition-colors cursor-pointer">Legal</a>
            <a href="#" class="hover:text-[#CA8A04] transition-colors cursor-pointer">Privacy</a>
            <a href="#" class="hover:text-[#CA8A04] transition-colors cursor-pointer">Compliance</a>
         </div>
         <div class="text-right hidden md:block">
            MEMBER FINRA / SIPC
         </div>
      </div>
    </footer>
  </div>
</Layout>

<style>
  @keyframes marquee-fast {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }
  .animate-marquee-fast {
    animation: marquee-fast 15s linear infinite;
  }
</style>
