---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="LUMINA | Bold Fashion E-commerce">
  <!-- Styles for this demo -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@300;400;500;600;700;800&family=Syne:wght@400;500;600;700;800&display=swap" rel="stylesheet">

  <div class="bg-[#FFF1F2] min-h-screen text-[#881337] font-['Manrope',_sans-serif]">
    
    <!-- Announcement Bar -->
    <div class="bg-[#E11D48] text-white py-3 px-6 text-center text-xs font-bold uppercase tracking-[0.2em] relative overflow-hidden">
      <div class="animate-marquee whitespace-nowrap inline-block">
        Free Worldwide Shipping on orders over $250 • Limited Edition Collection Out Now • Shop the look 2026 • Free Worldwide Shipping on orders over $250
      </div>
    </div>

    <!-- Navigation -->
    <nav class="bg-white/80 backdrop-blur-xl border-b border-[#E11D48]/10 sticky top-0 z-50">
      <div class="max-w-[1440px] mx-auto px-6 h-24 flex items-center justify-between">
        <!-- Logo -->
        <a href="#" class="group cursor-pointer">
          <span class="font-['Syne'] font-extrabold text-4xl tracking-tighter text-[#E11D48] group-hover:scale-105 transition-transform duration-300 block">LUMINA.</span>
        </a>

        <!-- Links -->
        <div class="hidden lg:flex items-center gap-12 font-bold text-sm uppercase tracking-widest">
          <a href="#" class="hover:text-[#E11D48] transition-colors cursor-pointer border-b-2 border-transparent hover:border-[#E11D48] pb-1">Spring</a>
          <a href="#" class="hover:text-[#E11D48] transition-colors cursor-pointer border-b-2 border-transparent hover:border-[#E11D48] pb-1">Essential</a>
          <a href="#" class="hover:text-[#E11D48] transition-colors cursor-pointer border-b-2 border-transparent hover:border-[#E11D48] pb-1">Archive</a>
          <a href="#" class="hover:text-[#E11D48] transition-colors cursor-pointer border-b-2 border-transparent hover:border-[#E11D48] pb-1">Editorial</a>
        </div>

        <!-- Icons -->
        <div class="flex items-center gap-8">
           <div class="hidden md:flex items-center gap-2 group cursor-pointer">
              <svg class="w-5 h-5 text-[#881337] group-hover:text-[#E11D48] transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
              <span class="text-xs font-black uppercase tracking-widest group-hover:text-[#E11D48] transition-colors">Search</span>
           </div>
           <div class="relative group cursor-pointer">
              <svg class="w-6 h-6 text-[#E11D48]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path></svg>
              <span class="absolute -top-1 -right-2 bg-[#2563EB] text-white text-[10px] font-black w-4 h-4 flex items-center justify-center rounded-full">3</span>
           </div>
        </div>
      </div>
    </nav>

    <main>
      <!-- Hero Section -->
      <section class="relative h-[80vh] flex items-center justify-center overflow-hidden bg-white">
        <div class="absolute inset-0 bg-[#FFF1F2]/50"></div>
        
        <!-- Abstract Shapes -->
        <div class="absolute top-20 right-[10%] w-[30vw] h-[30vw] bg-gradient-to-tr from-[#FB7185] to-[#FCA5A1] rounded-full blur-[100px] opacity-30 animate-pulse"></div>
        <div class="absolute bottom-20 left-[10%] w-[25vw] h-[25vw] bg-gradient-to-br from-[#2563EB] to-[#60A5FA] rounded-full blur-[100px] opacity-20 animate-pulse delay-700"></div>

        <div class="relative z-10 text-center space-y-12 px-6">
          <h1 class="font-['Syne'] text-[12vw] md:text-[8vw] leading-[0.85] font-extrabold tracking-tighter text-[#E11D48]">
            RAW. BOLD. <br/> UNFILTERED.
          </h1>
          <p class="text-xl md:text-2xl text-[#881337]/70 max-w-2xl mx-auto font-medium">
            Discover the Archive Collection. Where timeless silhouettes meet experimental textures.
          </p>
          <div class="flex flex-col sm:flex-row items-center justify-center gap-6 pt-8">
            <a href="#" class="bg-[#2563EB] hover:bg-[#1E40AF] text-white px-12 py-6 text-sm font-black uppercase tracking-[0.2em] rounded-none shadow-2xl transition-all hover:scale-105 cursor-pointer">
              Shop Collection
            </a>
            <a href="#" class="border-2 border-[#E11D48] text-[#E11D48] px-12 py-6 text-sm font-black uppercase tracking-[0.2em] rounded-none hover:bg-[#E11D48] hover:text-white transition-all cursor-pointer">
              Explore Edit
            </a>
          </div>
        </div>
      </section>

      <!-- Category Masonry -->
      <section class="py-32 px-6 bg-[#FFF1F2]">
        <div class="max-w-[1440px] mx-auto grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-12">
          
          <!-- Large Promo -->
          <div class="lg:col-span-2 relative group overflow-hidden bg-white aspect-[16/9]">
            <div class="absolute inset-0 bg-gradient-to-tr from-[#E11D48] to-[#FB7185] opacity-10 group-hover:opacity-20 transition-opacity duration-700"></div>
            <!-- Mock Product Composition -->
            <div class="absolute inset-0 flex items-center justify-center pointer-events-none">
              <div class="w-2/3 h-2/3 bg-gradient-to-br from-white/40 to-white/10 backdrop-blur-3xl border border-white/50 shadow-2xl p-12 flex flex-col justify-end">
                  <div class="w-20 h-2 bg-[#E11D48] mb-4"></div>
                  <div class="w-full h-8 bg-[#881337]/10 mb-2"></div>
                  <div class="w-4/5 h-8 bg-[#881337]/10"></div>
              </div>
            </div>
            <div class="absolute bottom-12 left-12 space-y-4">
              <span class="text-sm font-black uppercase tracking-widest text-[#E11D48]">Featured</span>
              <h2 class="font-['Syne'] text-5xl font-extrabold text-[#881337]">Outerwear / <br/> Spec 01</h2>
              <a href="#" class="inline-block font-black text-xs uppercase tracking-widest border-b-2 border-[#E11D48] pb-1 cursor-pointer">Shop Now</a>
            </div>
          </div>

          <!-- Vertical Promo -->
          <div class="relative group overflow-hidden bg-white aspect-[3/4]">
             <div class="absolute inset-0 bg-gradient-to-br from-[#2563EB] to-[#FB7185] opacity-5 group-hover:opacity-10 transition-opacity duration-700"></div>
             <!-- Mock Visual -->
             <div class="absolute inset-0 flex flex-col p-12">
                 <div class="flex-1 flex items-center justify-center">
                    <div class="w-48 h-48 rounded-full border-4 border-dashed border-[#E11D48]/20 animate-spin-slow"></div>
                 </div>
                 <div class="space-y-4">
                    <span class="text-sm font-black uppercase tracking-widest text-[#2563EB]">New Drop</span>
                    <h2 class="font-['Syne'] text-4xl font-extrabold text-[#881337]">Accessories</h2>
                    <a href="#" class="inline-block font-black text-xs uppercase tracking-widest border-b-2 border-[#2563EB] pb-1 cursor-pointer">View All</a>
                 </div>
             </div>
          </div>
        </div>
      </section>

      <!-- Trending Products Grid -->
      <section class="py-32 px-6 bg-white">
        <div class="max-w-[1440px] mx-auto space-y-20">
          <div class="flex flex-col md:flex-row md:items-end justify-between gap-8 border-b-4 border-[#881337]/5 pb-12">
             <div class="space-y-4">
                <span class="text-sm font-black uppercase tracking-widest text-[#E11D48]">Shop the edit</span>
                <h3 class="font-['Syne'] text-6xl md:text-8xl font-extrabold tracking-tighter text-[#881337]">TRENDING.</h3>
             </div>
             <a href="#" class="text-lg font-black uppercase tracking-widest flex items-center gap-4 group cursor-pointer">
                View All <svg class="w-6 h-6 group-hover:translate-x-2 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
             </a>
          </div>

          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-1">
            {[
              { name: 'Oversized Silk Blazer', price: '$420', grad: 'from-[#FB7185] to-[#FCA5A1]' },
              { name: 'Leather Cargo Trousers', price: '$680', grad: 'from-[#2563EB] to-[#60A5FA]' },
              { name: 'Sculpted Mesh Top', price: '$290', grad: 'from-[#FDE68A] to-[#F59E0B]' },
              { name: 'Chunky Link Necklace', price: '$180', grad: 'from-[#F9A8D4] to-[#E11D48]' },
            ].map((p) => (
              <div class="group relative bg-[#FFF1F2]/30 p-8 flex flex-col justify-between aspect-[3/4] hover:bg-white transition-colors duration-500 cursor-pointer overflow-hidden">
                <div class="space-y-2">
                  <h4 class="text-sm font-black uppercase tracking-widest text-[#881337]/40 group-hover:text-[#E11D48] transition-colors">Spring 2026</h4>
                  <div class="font-['Syne'] text-2xl font-extrabold text-[#881337]">{p.name}</div>
                </div>
                
                <!-- Mock Product Image (High Fidelity CSS) -->
                <div class="flex-1 flex items-center justify-center p-8 relative">
                   <div class={`w-40 h-40 bg-gradient-to-tr ${p.grad} shadow-2xl rotate-12 group-hover:rotate-0 transition-transform duration-700`}></div>
                   <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-500 bg-white/60 backdrop-blur-sm">
                      <button class="bg-[#E11D48] text-white px-8 py-3 text-[10px] font-black uppercase tracking-widest">Add to Bag</button>
                   </div>
                </div>

                <div class="flex items-center justify-between">
                   <span class="text-lg font-bold">{p.price}</span>
                   <svg class="w-5 h-5 opacity-0 group-hover:opacity-100 transition-opacity" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
                </div>
              </div>
            ))}
          </div>
        </div>
      </section>

      <!-- Editorial Newsletter -->
      <section class="bg-[#881337] py-32 px-6 text-white overflow-hidden relative">
        <div class="absolute inset-0 bg-[url('https://www.transparenttextures.com/patterns/black-paper.png')] opacity-20 pointer-events-none"></div>
        <div class="max-w-4xl mx-auto text-center space-y-12 relative z-10">
           <h2 class="font-['Syne'] text-5xl md:text-7xl font-extrabold tracking-tighter leading-none">JOIN THE <br/> COLLECTIVE.</h2>
           <p class="text-rose-200 text-lg md:text-xl max-w-xl mx-auto font-medium">Be the first to access private sales, editorial content, and early drop alerts.</p>
           <form class="flex flex-col sm:flex-row gap-4 max-w-2xl mx-auto pt-8">
              <input type="email" placeholder="YOUR EMAIL ADDRESS" class="bg-white/10 border-2 border-white/20 px-8 py-6 text-sm font-black uppercase tracking-widest flex-1 focus:outline-none focus:border-white transition-colors" />
              <button class="bg-white text-[#881337] px-12 py-6 text-sm font-black uppercase tracking-widest hover:bg-[#FB7185] hover:text-white transition-all cursor-pointer">Subscribe</button>
           </form>
           <p class="text-[10px] font-bold tracking-[0.2em] text-rose-300/50 pt-12 uppercase">Privacy is luxury. We never share your data.</p>
        </div>
      </section>

    </main>

    <footer class="bg-white py-24 px-6 border-t-8 border-[#E11D48]">
      <div class="max-w-[1440px] mx-auto grid grid-cols-2 lg:grid-cols-5 gap-16">
        <div class="col-span-2 space-y-8">
          <span class="font-['Syne'] font-extrabold text-5xl tracking-tighter text-[#E11D48]">LUMINA.</span>
          <p class="text-[#881337]/60 text-sm leading-relaxed max-w-sm font-medium">Experimental fashion laboratory focused on sustainable materials and brutalist silhouettes. Redefining the standard since 2026.</p>
          <div class="flex items-center gap-6">
             <!-- Social Mock -->
             <div class="w-10 h-10 border border-[#E11D48]/20 flex items-center justify-center hover:bg-[#E11D48] hover:text-white transition-all cursor-pointer"><svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"></path></svg></div>
             <div class="w-10 h-10 border border-[#E11D48]/20 flex items-center justify-center hover:bg-[#E11D48] hover:text-white transition-all cursor-pointer font-black text-xs">TW</div>
             <div class="w-10 h-10 border border-[#E11D48]/20 flex items-center justify-center hover:bg-[#E11D48] hover:text-white transition-all cursor-pointer font-black text-xs">FB</div>
          </div>
        </div>
        <div class="space-y-6">
          <h6 class="font-black text-xs uppercase tracking-widest text-[#E11D48]">Support</h6>
          <ul class="space-y-4 text-sm font-bold text-[#881337]/50">
            <li><a href="#" class="hover:text-[#E11D48] transition-colors cursor-pointer">Shipping</a></li>
            <li><a href="#" class="hover:text-[#E11D48] transition-colors cursor-pointer">Returns</a></li>
            <li><a href="#" class="hover:text-[#E11D48] transition-colors cursor-pointer">Contact</a></li>
          </ul>
        </div>
        <div class="space-y-6">
          <h6 class="font-black text-xs uppercase tracking-widest text-[#E11D48]">Company</h6>
          <ul class="space-y-4 text-sm font-bold text-[#881337]/50">
            <li><a href="#" class="hover:text-[#E11D48] transition-colors cursor-pointer">About</a></li>
            <li><a href="#" class="hover:text-[#E11D48] transition-colors cursor-pointer">Careers</a></li>
            <li><a href="#" class="hover:text-[#E11D48] transition-colors cursor-pointer">Legal</a></li>
          </ul>
        </div>
        <div class="space-y-6">
           <h6 class="font-black text-xs uppercase tracking-widest text-[#E11D48]">Payments</h6>
           <div class="flex flex-wrap gap-2 opacity-50">
              <div class="w-10 h-6 bg-slate-200 rounded"></div>
              <div class="w-10 h-6 bg-slate-200 rounded"></div>
              <div class="w-10 h-6 bg-slate-200 rounded"></div>
           </div>
        </div>
      </div>
      <div class="max-w-[1440px] mx-auto mt-20 pt-12 border-t border-[#881337]/5 flex flex-col md:flex-row justify-between items-center gap-8">
         <div class="text-[10px] font-black uppercase tracking-[0.3em] text-[#881337]/30">© 2024 LUMINA LABS INC. ALL RIGHTS RESERVED.</div>
         <div class="flex items-center gap-12 text-[10px] font-black uppercase tracking-[0.3em] text-[#881337]/30">
            <a href="#" class="hover:text-[#E11D48] transition-colors cursor-pointer">Privacy</a>
            <a href="#" class="hover:text-[#E11D48] transition-colors cursor-pointer">Cookies</a>
            <a href="#" class="hover:text-[#E11D48] transition-colors cursor-pointer">Terms</a>
         </div>
      </div>
    </footer>
  </div>
</Layout>

<style>
  @keyframes marquee {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }
  .animate-marquee {
    animation: marquee 30s linear infinite;
  }
  .animate-spin-slow {
    animation: spin 10s linear infinite;
  }
  @keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }
</style>
